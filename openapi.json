{
  "openapi": "3.0.0",
  "info": {
    "title": "Syndicate API",
    "version": "v3.3"
  },
  "paths": {
    "/api/ingest": {
      "post": {
        "operationId": "SalvarRegistro",
        "summary": "SalvarRegistro",
        "description": "Persiste registros narrativos no sistema Syndicate.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegistroBase"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registro criado com sucesso"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "RegistroBase": {
        "type": "object",
        "required": [
          "tipo_registro",
          "autor",
          "id_caso",
          "etapa",
          "especialista",
          "dados"
        ],
        "properties": {
          "tipo_registro": {
            "type": "string",
            "enum": [
              "hipotese",
              "evidencia",
              "perfil_personagem",
              "entrada_timeline",
              "registro_misc"
            ]
          },
          "autor": {
            "type": "string"
          },
          "id_caso": {
            "type": "string"
          },
          "etapa": {
            "type": "string"
          },
          "especialista": {
            "type": "string"
          },
          "dados": {
            "type": "object",
            "description": "Objeto obrigat\u00f3rio com os campos espec\u00edficos do tipo_registro. Ex: 'hipotese', 'justificativa', 'conteudo', etc."
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "probabilidade": {
            "type": "number"
          }
        }
      }
    }
  }
}